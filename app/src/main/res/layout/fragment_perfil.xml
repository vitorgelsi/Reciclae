<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".fragments.PerfilFragment">

    <TextView
        android:id="@+id/txv_reciclae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="cursive"
        android:text="Reciclaê"
        android:textColor="@color/verde1"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="@id/btn_dd_pessoais"
        app:layout_constraintStart_toStartOf="@id/btn_dd_pessoais"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_meu_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="35dp"
        android:text="Meu Perfil"
        app:layout_constraintBottom_toTopOf="@id/btn_dd_pessoais"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txv_reciclae" />


    <TextView
        android:id="@+id/txv_servicos_conectados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:text="Serviços Conectados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_senha" />

    <Button
        android:id="@+id/btn_dd_pessoais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:gravity="start|center_vertical"
        android:text="Dados Pessoais"
        android:textColor="@color/grey1"
        app:layout_constraintTop_toBottomOf="@id/txv_meu_perfil" />

    <Button
        android:id="@+id/btn_pontuacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:gravity="start|center_vertical"
        android:text="pontuação"
        android:textColor="@color/grey1"
        app:layout_constraintTop_toBottomOf="@id/btn_dd_pessoais" />

    <Button
        android:id="@+id/btn_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:text="e-mail"
        android:backgroundTint="@color/white"
        android:textColor="@color/grey1"
        app:layout_constraintTop_toBottomOf="@id/btn_pontuacao" />

    <Button
        android:id="@+id/btn_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:text="senha"
        android:backgroundTint="@color/white"
        android:textColor="@color/grey1"
        app:layout_constraintTop_toBottomOf="@id/btn_email" />

    <Button
        android:id="@+id/btn_navegacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start|center_vertical"
        android:text="Navegação"
        android:backgroundTint="@color/white"
        android:textColor="@color/grey1"
        app:layout_constraintTop_toBottomOf="@id/txv_servicos_conectados" />


    <Button
        android:id="@+id/btn_sair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:backgroundTint="@color/red1"
        app:layout_constraintTop_toBottomOf="@id/btn_navegacao"
        app:layout_constraintEnd_toEndOf="@id/btn_navegacao"
        app:layout_constraintStart_toStartOf="@id/btn_navegacao"
        android:layout_marginTop="35dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>